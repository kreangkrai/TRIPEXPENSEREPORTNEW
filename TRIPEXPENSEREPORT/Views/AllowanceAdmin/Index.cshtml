                    }
                },
                searching: false,
                paging: false,
                info: false,
                order: false,
            });
        }
        async function GetDataMap(emp_id ,date) {
            let datas = [];
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetALLRoute", "AllowanceAdmin")',
                contentType: 'application/x-www-form-urlencoded',
                data: { emp_id,date },
                success: function (response) {
                    datas = response;                  
                }
            });
            return datas;
        }
        function initMap(datas, trip) {
            $("#showmap").html("");
            $('#ShowMapModal').modal('show');
            const tokenID = "@Html.Raw(mapkit)";
            var center = new mapkit.Coordinate(13.728544, 100.728654);
            mapkit.init({
                authorizationCallback: function (done) {
                    done(tokenID);
                },
                language: "us"
            });

            var CALLOUT_OFFSET = new DOMPoint(-148, -140);
            var landmarkAnnotationCallout = {
                calloutElementForAnnotation: function (annotation) {
                    return calloutForLandmarkAnnotation(annotation);
                },

                calloutAnchorOffsetForAnnotation: function (annotation, element) {
                    return CALLOUT_OFFSET;
                },

                calloutAppearanceAnimationForAnnotation: function (annotation) {
                    return ".4s cubic-bezier(0.4, 0, 0, 1.5) 0s 1 normal scale-and-fadein";
                }
            };

            function calloutForLandmarkAnnotation(annotation) {
                var div = document.createElement("div");
                div.className = "landmark";

                var title = div.appendChild(document.createElement("h1"));
                title.textContent = annotation.landmark.title;

                var section = div.appendChild(document.createElement("section"));

                var status = section.appendChild(document.createElement("p"));
                status.className = "Status";
                status.textContent = "Status : " + annotation.landmark.status;

                var car = section.appendChild(document.createElement("p"));
                car.className = "Car";
                car.textContent = "Car : " + annotation.landmark.car;

                var driver = section.appendChild(document.createElement("p"));
                driver.className = "Driver";
                driver.textContent = "Driver : " + annotation.landmark.driver;

                var date = section.appendChild(document.createElement("p"));
                date.className = "Date";
                date.textContent = "Date : " + annotation.landmark.date;

                return div;
            }

            var location = [];
 
            for (var i = 0; i < datas.length; i++) {
                if (datas[i].trip == trip) {
                    if (datas[i].status != 'NA') {
                        location.push({ coordinate: new mapkit.Coordinate(datas[i].latitude, datas[i].longitude), title: datas[i].location, status: datas[i].status, car: datas[i].car_id, driver: datas[i].driver_name, date: datas[i].date });
                    }
                }
            }
            var annotations = location.map(function (landmark) {
                var annotation = new mapkit.MarkerAnnotation(landmark.coordinate, {
                    callout: landmarkAnnotationCallout,
                    color: "#ff3300",
                    title: landmark.title,
                });
                annotation.landmark = landmark;
                return annotation;
            });


            var map = new mapkit.Map("showmap", { center: center });
            map.showItems(annotations);

            // Draw Polyline
            var points = [];
            for (var i = 0; i < datas.length; i++) {
                if (datas[i].trip == trip) {
                    points.push([datas[i].latitude, datas[i].longitude]);
                }
            }

            var coords = points.map(function (point) {
                return new mapkit.Coordinate(point[0], point[1]);
            });

            var style = new mapkit.Style({
                strokeOpacity: 0.8,
                lineWidth: 5,
                lineJoin: "round",
                strokeColor: "#0000FF"
            });

            var polyline = new mapkit.PolylineOverlay(coords, { style: style });

            map.addOverlay(polyline);
        }
