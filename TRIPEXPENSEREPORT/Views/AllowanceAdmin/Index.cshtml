        function GenerateLocationTable(datas) {
            let _datas = [];
            let _last_date = "";
            for (let i = 0; i < datas.length; i++) {
                if (i > 0) {
                    if (_last_date !== datas[i].date.split('T')[0]) {
                        _datas.push(['', '', '', '', '', '', '', '', '','']);
                    }
                }
                _last_date = datas[i].date.split('T')[0];

                _datas.push([
                    datas[i].date.split('T')[0],
                    datas[i].time,
                    datas[i].trip,
                    datas[i].car,
                    datas[i].driver,
                    datas[i].passenger,
                    datas[i].status,
                    datas[i].location,
                    datas[i].duration,
                    datas[i].mode
